{
  "manifest_version": 3,
  "name": "Braintrust Circle Chat Bridge",
  "version": "0.1.0",
  "description": "Streams ChatGPT, Claude and Gemini chats into the Braintrust Circle workspace.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://localhost:5005/*"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}